#include <stdio.h>

int main() {
    int choice, score = 0;

    printf("Welcome to the Quiz Game!\n\n");

    printf("Q1: What is the capital of India?\n");
    printf("1. Mumbai\n2. Delhi\n3. Kolkata\n4. Chennai\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);
    if (choice == 2) {
        score++;
        printf("Correct!\n\n");
    } else {
        printf("Wrong. The correct answer is Delhi.\n\n");
    }

    printf("Q2: Who is known as the Father of the Nation in India?\n");
    printf("1. Jawaharlal Nehru\n2. Mahatma Gandhi\n3. Subhas Chandra Bose\n4. Bhagat Singh\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);
    if (choice == 2) {
        score++;
        printf("Correct!\n\n");
    } else {
        printf("Wrong. The correct answer is Mahatma Gandhi.\n\n");
    }

    printf("Q3: What is the largest planet in our Solar System?\n");
    printf("1. Earth\n2. Mars\n3. Jupiter\n4. Saturn\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);
    if (choice == 3) {
        score++;
        printf("Correct!\n\n");
    } else {
        printf("Wrong. The correct answer is Jupiter.\n\n");
    }

    printf("You scored %d out of 3.\n", score);
    if (score == 3) {
        printf("Excellent! You're a genius.\n");
    } else if (score == 2) {
        printf("Good! You did well.\n");
    } else if (score == 1) {
        printf("Okay! You need some improvement.\n");
    } else {
        printf("Better luck next time!\n");
    }

    return 0;
}
